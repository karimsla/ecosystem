{% extends 'Dashboard.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="breadcrumb-main user-member justify-content-sm-between ">
                    <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                        <div class="d-flex align-items-center user-member__title justify-content-center mr-sm-25">
                            <h4 class="text-capitalize fw-500 breadcrumb-title">Member List</h4>
                            <span class="sub-title ml-sm-25 pl-sm-25">{{ members|length }} Member</span>
                        </div>

                        <form action="{{ path('member_index') }}" class="d-flex align-items-center user-member__form my-sm-0 my-2">
                            <span data-feather="search"></span>
                            <input class="form-control mr-sm-2 border-0 box-shadow-none" type="search" placeholder="Search by Name" aria-label="Search">
                        </form>

                    </div>
                    <div class="action-btn">
                        <a href="#" class="btn px-15 btn-primary" data-toggle="modal" data-target="#new-member">
                            <i class="las la-plus fs-16"></i>Add New Member</a>

                        <!-- Modal -->
                        <div class="modal fade new-member" id="new-member" role="dialog" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content  radius-xl">
                                    <div class="modal-header">
                                        <h6 class="modal-title fw-500" id="staticBackdropLabel">Add Member</h6>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span data-feather="x"></span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="new-member-modal">

                                            <form action="{{ path('member_new') }}" method="post" enctype="multipart/form-data">
                                                <!-- form group -->
                                                <div class="form-group">
                                                    <label for="name1">Member name</label>
                                                    <input type="text" class="form-control" id="name1"
                                                           placeholder="Name">
                                                </div>

                                                <div class="form-group mb-0">
                                                    <label for="name9">Position</label>
                                                    <input type="text" class="form-control" id="name9"
                                                           placeholder="Position">
                                                </div>

                                                <div class="form-group">
                                                    <label for="name2">Member Information</label>
                                                    <textarea rows="5" class="form-control" id="name2"
                                                              placeholder="Information"></textarea>
                                                </div>


                                                <div class="form-group">
                                                    <h6 class="fw-500">Member image</h6>

                                                    <!-- Start: product body -->
                                                    <div class="add-product__body-img px-sm-40 px-20">
                                                        <label for="upload" class="file-upload__label">
                                                        <span class="upload-product-img px-10 d-block">
                                                            <span class="file-upload">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                                     height="24" viewBox="0 0 24 24" fill="none"
                                                                     stroke="currentColor" stroke-width="2"
                                                                     stroke-linecap="round" stroke-linejoin="round"
                                                                     class="feather feather-upload"><path
                                                                            d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
                                                                            points="17 8 12 3 7 8"></polyline><line
                                                                            x1="12" y1="3" x2="12" y2="15"></line></svg>
                                                                <input id="upload" class="file-upload__input"
                                                                       type="file" name="file-upload">
                                                            </span>
                                                            <span class="pera">Drag and drop an image</span>
                                                            <span>or <a href="#" class="color-secondary">Browse</a> to choose a
                                                                file</span>
                                                        </span>
                                                        </label>

                                                    </div>
                                                </div>
                                                <div class="button-group add-product-btn d-flex justify-content-end mt-40">


                                                    <button type="reset"
                                                            class="btn btn-light btn-default btn-squared fw-400 text-capitalize">cancel
                                                    </button>


                                                    <button type="submit"
                                                            class="btn btn-primary btn-default btn-squared text-capitalize">save product
                                                    </button>


                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->


                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="userDatatable global-shadow border p-30 bg-white radius-xl w-100 mb-30">
                    <div class="table-responsive">
                        <table class="table mb-0 table-borderless">
                            <thead>
                            <tr class="userDatatable-header">
                                <th>
                                    <div class="d-flex align-items-center">
                                        <div class="custom-checkbox  check-all">
                                            <input class="checkbox" type="checkbox" id="check-3">
                                            <label for="check-3">
                                                <span class="checkbox-text userDatatable-title">Member</span>
                                            </label>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Name</span>
                                </th>

                                <th>
                                    <span class="userDatatable-title">position</span>
                                </th>

                                <th>
                                    <span class="userDatatable-title float-right">action</span>
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for member in members %}
                            <tr>
                                <td>
                                    <div class="d-flex">
                                        <div class="userDatatable__imgWrapper d-flex align-items-center">
                                            <div class="checkbox-group-wrapper">
                                                <div class="checkbox-group d-flex">
                                                    <div class="checkbox-theme-default custom-checkbox checkbox-group__single d-flex">
                                                        <input class="checkbox" type="checkbox" id="check-grp-12">
                                                        <label for="check-grp-12"></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <a href="#" class="profile-image rounded-circle d-block m-0 wh-38" style="background-image:url({{ asset( member.image!=null?'back/img/'~member.image:"back/img/tm6.png" ) }}); background-size: cover;">

                                            </a>
                                        </div>
                                        <div class="userDatatable-inline-title">
                                            <a href="#" class="text-dark fw-500">
                                                <h6>{{ member.id }}</h6>
                                            </a>
                                            <p class="d-block mb-0">
                                                {{ member.position }}
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="userDatatable-content">
                                        {{member.name}}
                                    </div>
                                </td>


                                <td>
                                    <div class="userDatatable-content">
                                        {{member.position}}
                                    </div>
                                </td>


                                <td>
                                    <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                        <li>
                                            <a href="#" id="view_profile"  data-toggle="modal" data-target="#member-profile" class="view"
                                            data-id="{{ member.id }}" data-name="{{ member.name }}" data-position="{{ member.position }}" data-info="{{ member.information }}"
                                            data-image="{{ member.image }}">
                                                <span data-feather="eye"></span></a>

                                              </li>
                                        <li>
                                            <a href="{{ path('member_edit',{'id': member.id }) }}" class="edit">
                                                <span data-feather="edit"></span></a>
                                        </li>
                                        <li>
                                            <a href="{{ path('member_delete',{'id': member.id} ) }}" class="remove">
                                                <span data-feather="trash-2"></span></a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>

                            {% endfor %}




                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-end pt-30">

                        <nav class="atbd-page ">
                            <ul class="atbd-pagination d-flex">
                                <li class="atbd-pagination__item">
                                    <a href="#" class="atbd-pagination__link pagination-control"><span class="la la-angle-left"></span></a>
                                    <a href="#" class="atbd-pagination__link"><span class="page-number">1</span></a>
                                    <a href="#" class="atbd-pagination__link active"><span class="page-number">2</span></a>
                                    <a href="#" class="atbd-pagination__link"><span class="page-number">3</span></a>
                                    <a href="#" class="atbd-pagination__link pagination-control"><span class="page-number">...</span></a>
                                    <a href="#" class="atbd-pagination__link"><span class="page-number">12</span></a>
                                    <a href="#" class="atbd-pagination__link pagination-control"><span class="la la-angle-right"></span></a>
                                    <a href="#" class="atbd-pagination__option">
                                    </a>
                                </li>
                                <li class="atbd-pagination__item">
                                    <div class="paging-option">
                                        <select name="page-number" class="page-selection">
                                            <option value="20">20/page</option>
                                            <option value="40">40/page</option>
                                            <option value="60">60/page</option>
                                        </select>
                                    </div>
                                </li>
                            </ul>
                        </nav>


                    </div>
                </div>
            </div>
        </div>
    </div>





    <!-- Modal -->
    <div class="modal fade new-member" id="member-profile" role="dialog" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content  radius-xl">
                <div class="modal-header">
                    <h6 class="modal-title fw-500" id="staticBackdropLabel">Profile</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span data-feather="x"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card mb-25">
                        <div class="card-body text-center pt-sm-30 pb-sm-0  px-25 pb-0">

                            <div class="account-profile">
                                <div class="ap-img w-100 d-flex justify-content-center">
                                    <!-- Profile picture image-->
                                    <img class="ap-img__main rounded-circle mb-3  wh-120 d-flex bg-opacity-primary"
                                         src="{{ asset('back/img/author/profile.png') }}" id="profile_image" alt="profile">
                                </div>
                                <div class="ap-nameAddress pb-3 pt-1">
                                    <h5 class="ap-nameAddress__title" id="profile_name"></h5>
                                    <p class="ap-nameAddress__subTitle fs-14 m-0" id="profile_description"></p>
                                    <p class="ap-nameAddress__subTitle fs-14 m-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin">
                                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                            <circle cx="12" cy="10" r="3"></circle></svg><span id="profile_position"></span>
                                    </p>
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->

    <script src="{{ asset('back/js/jquery.js') }}"></script>
    <script>
        $("#view_profile").on("click" , function () {
            var id = $(this).data('id');
            var name=$(this).data('name');
            var info=$(this).data('info');
            var position=$(this).data('position');
            var img=$(this).data('image')
            if(img===""){
                img="tm6.png";
            }



            document.getElementById("profile_description").textContent   = info;
            document.getElementById("profile_name").textContent   = name;
            document.getElementById("profile_position").textContent  = position;

            document.getElementById("profile_image").attr("src","back/img/"+img);
            // As pointed out in comments,
            // it is unnecessary to have to manually call the modal.
            // $('#addBookDialog').modal('show');
        });
    </script>
{% endblock %}
